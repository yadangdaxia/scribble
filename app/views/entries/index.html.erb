
<div class="container">
  <h1>Index page </h1>
  <h2>Here are all the entries</h2>
  <p>Add search form</p>

  <button id="greet-user-button">Hello!</button>


  <button id="big-button">CLICK ME</button>

  <!--- Does this tag need to go at the bottom of the page? --->
  <%= javascript_pack_tag 'greeter'%>

</div>

<div class="container">
  <div class="row">

    <div class="col-sm">
      <% @entries.each do |entry| %>
        <div class="entry_card">
          <h3><%= entry.date.strftime("%B %-d, %Y, %-k:%M") %></h3>
          <%= link_to "View Entry", entry_path(entry.id) %>
        </div>
      <% end %>
    </div>

    <div class="col-sm" id="sample">
      <h2><%= Entry.find(34).body %></h2>
    </div>

  </div>
</div>
